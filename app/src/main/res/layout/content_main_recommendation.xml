<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/recommendation_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/recommendation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:textSize="22sp"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/recommendation_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:layout_below="@id/recommendation_title"
        />

    <RelativeLayout
        android:id="@+id/recommendation_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/recommendation_image"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/recommendation_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="description"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#202020"
            />


    </RelativeLayout>

</RelativeLayout>