<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 전체 세로 정렬 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 상단부 레이아웃 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/basicStatusBarColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    />
                <ImageView
                    android:id="@+id/main_logo"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:src="@mipmap/ic_launcher"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <TextView
                    android:id="@+id/main_top_profile"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@mipmap/ic_launcher">

                </TextView>




                <TextView
                    android:id="@+id/main_top_search"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:background="#505050"
                    android:layout_margin="2dp"
                    android:text="search"/>
                <TextView
                    android:id="@+id/main_top_alarm"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:layout_toLeftOf="@id/main_top_search"
                    android:background="#505050"
                    android:layout_margin="2dp"
                    android:text="alarm"/>
            </RelativeLayout>

        </RelativeLayout>

        <!-- 리스트 뷰 -->
        <ListView
            android:id="@+id/main_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <!-- 하단부 레이아웃-->
    <LinearLayout
        android:id="@+id/main_bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/main_bottom_filter"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#8879D3FB"
            android:text="filter"
            />

        <TextView
            android:id="@+id/main_bottom_down"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00ff00"
            android:text="down"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_above="@id/main_bottom_layout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <View
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/main_bottom_up"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00ff00"
            android:text="up"
            />
    </LinearLayout>
</RelativeLayout>
